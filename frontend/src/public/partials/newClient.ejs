<!-- Modal -->
<div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Adicionar novo cliente</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/clientes" method="POST">
            <input class = "form-control" required type="text" name="fullName" id="fullName" placeholder="Nome completo">
            <input class = "form-control" required style="margin-top: 10px" type="email" name="email" id="email" placeholder="Email">
            <input class = "form-control" required style="margin-top: 10px" maxlength="11" type="text" name="cpf" id="cpf" placeholder="CPF">
            <input class = "form-control" required style="margin-top: 10px" hidden type="number" name="companyId" id="companyId" value = "<%= fixedCompanyId %>" placeholder="Peso">
            <div class="modal-footer"> 
        
              <div class="alert alert-warning" role="alert">
                O CPF não poderá ser alterado futuramente, revise o campo antes de cadastrar um novo cliente.
              </div>

              <br><br>
              <div class = "form-inline" style="margin-top: 10px;">
                <button type="submit" class="btn btn-secondary" style="margin-right: 10px; width: 150px;" data-dismiss="modal">Cancelar</button>
                <button type="submit" style="width: 150px;" class="btn btn-primary">Criar</button>
              </div>
            
            </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>

