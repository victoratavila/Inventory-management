<!-- Modal -->
<div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Adicionar novo produto</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/produtos" method="POST">
            <input class = "form-control" required type="text" name="name" id="name" placeholder="Nome do produto">
            <input class = "form-control" required style="margin-top: 10px" type="text" name="description" id="description" placeholder="Descrição">
            <input class = "form-control" required style="margin-top: 10px" type="text" name="category" id="category" placeholder="Categoria">
            <input class = "form-control" required style="margin-top: 10px" type="text" name="price" id="price" placeholder="Preço">
            <input class = "form-control" required style="margin-top: 10px" type="text" name="amount" id="amount" placeholder="Quantidade">
            <input class = "form-control" required style="margin-top: 10px" type="text" name="weight" id="weight" placeholder="Peso">
            <input class = "form-control" required style="margin-top: 10px" hidden type="number" name="companyId" id="companyId" value = "<%= fixedCompanyId %>" placeholder="Peso">
            <div class="modal-footer"> <br>
              <br>
              <button type="submit" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
              <button type="submit" class="btn btn-primary">Criar</button>
            </div>
          </form>
        </div>
        
      </div>
    </div>
  </div>